# NYC 311 Data Pipeline Environment Variables Template
# Copy to .env and fill in your values

# Databricks Configuration
DATABRICKS_HOST=https://your-dev-workspace.databricks.com
DATABRICKS_TOKEN=your-token-here

# Optional: Databricks Production Environment
DATABRICKS_PROD_HOST=https://your-prod-workspace.databricks.com

# Optional: Service Principal for Production
DATABRICKS_CLIENT_ID=your-service-principal-client-id
DATABRICKS_CLIENT_SECRET=your-service-principal-secret

# NYC 311 API Configuration (Optional - improves rate limits)
NYC_311_APP_TOKEN=your-socrata-app-token

# Environment Configuration
ENVIRONMENT=dev  # dev or prod

# Logging Configuration
LOG_LEVEL=INFO

# Custom Configuration (Optional)
CUSTOM_CATALOG_NAME=data_engineering
CUSTOM_SCHEMA_NAME=nyc311
BATCH_SIZE=50000
